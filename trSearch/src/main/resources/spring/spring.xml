<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.0.xsd">


    <context:property-placeholder location="classpath*:/redis.properties, classpath*:/jdbc.properties, classpath*:/elasticsearch.properties"/>
    <!-- 自动扫描类, 把作了注解的类转换为bean -->
    <context:component-scan base-package="com.taoren.sc.*"/>

    <import resource="spring-dubbo-provider.xml"/>

    <import resource="spring-mybatis.xml"/>
    <!-- 测试环境 -->
    <import resource="spring-redis.xml"/>
    <!-- 生产环境 -->
    <!--<import resource="spring-redis-sentinel.xml"/>-->
    <import resource="spring-mvc.xml"/>
    <import resource="spring-elasticsearch.xml"/>

</beans>